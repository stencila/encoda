{
  "name": "stencila-convert",
  "version": "0.30.1",
  "description": "Converters for Stencila components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix --format stylish ./src/**/*.ts",
    "test": "jest",
    "cover": "jest --collectCoverage",
    "check": "npm run build:dist && npm run check:deps-used && npm run check:deps-unused",
    "check:deps-used": "dependency-check --missing .",
    "check:deps-unused": "dependency-check --unused --no-dev .",
    "build": "npm run build:dist",
    "build:dist": "tsc",
    "docs": "typedoc --readme README.md --mode file --out ./docs ./src",
    "prepublishOnly": "npm run lint && npm run test && npm run check && npm run docs",
    "clean": "rimraf coverage docs tests/**/*.to.*"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/stencila/convert#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/convert.git"
  },
  "bugs": {
    "url": "https://github.com/stencila/convert/issues"
  },
  "dependencies": {
    "@stencila/schema": "^0.8.0",
    "bin-version-check": "^4.0.0",
    "bin-wrapper": "^4.1.0",
    "cheerio": "^1.0.0-rc.2",
    "get-stdin": "^6.0.0",
    "glob": "^7.1.3",
    "hast-util-to-mdast": "^4.0.0",
    "hyperscript": "^2.0.2",
    "hyperscript-helpers": "^3.0.3",
    "js-beautify": "^1.9.1",
    "js-yaml": "^3.13.0",
    "lodash": "^4.17.11",
    "mdast-util-compact": "^1.0.2",
    "mdast-util-to-hast": "^4.0.0",
    "memfs": "^2.15.2",
    "mime": "^2.4.1",
    "mkdirp": "^0.5.1",
    "puppeteer": "^1.14.0",
    "rehype-parse": "^6.0.0",
    "rehype-stringify": "^5.0.0",
    "remark": "^10.0.1",
    "remark-frontmatter": "^1.3.1",
    "remark-generic-extensions": "^1.4.0",
    "remark-parse": "^6.0.3",
    "remark-stringify": "^6.0.4",
    "rimraf": "^2.6.3",
    "to-vfile": "^5.0.2",
    "unified": "^7.1.0",
    "unist-util-map": "^1.0.4",
    "vfile": "^4.0.0",
    "xlsx": "^0.14.2",
    "yaml-front-matter": "^4.0.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@types/get-stdin": "^5.0.1",
    "@types/hyperscript": "0.0.3",
    "@types/jest": "^24.0.11",
    "@types/js-yaml": "^3.12.1",
    "@types/mdast": "^3.0.2",
    "@types/mime": "^2.0.1",
    "@types/puppeteer": "^1.12.3",
    "@types/unist": "^2.0.3",
    "@types/yargs": "^12.0.11",
    "dependency-check": "^3.3.0",
    "googleapis": "^39.2.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-expect-message": "^1.0.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
